{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="header header--{{ section.settings.sticky_nav }}" id="header">
  <top-header>
    {% for block in section.blocks %}
      <div class="header__{{ block.type }}">
        <div class="container">
          <div class="row">
            {% if block.type == 'address-bar' %}
              <div class="col-12 col-md-6">
                <a href="/contact/">
                  <div class="location">
                    <div class="location__pin">
                      <span class="icon">{{- 'location-pin-icon.svg' | inline_asset_content }} </span>
                    </div>
                    <p class="location__text">
                      {{ block.settings.location_text }}
                    </p>
                  </div>
                </a>
              </div>
              <div class="col-12 col-md-6">
                <div class="settings">
                  <div class="settings__currency">
                    <select name="currency" id="currency" class="currency">
                      <option value="USD">USD</option>
                      <option value="EUR">EUR</option>
                      <option value="JPY">JPY</option>
                      <option value="GBP">GBP</option>
                      <option value="CAD">CAD</option>
                    </select>
                  </div>
                  <div class="vertical-line"></div>
                  <div class="settings__lang">
                    <select name="lang" id="lang">
                      <option value="eng">EN</option>
                      <option value="spa">SPA</option>
                      <option value="fra">FRA</option>
                      <option value="deu">DEU</option>
                      <option value="ita">ITA</option>
                    </select>
                  </div>
                  <div class="vertical-line"></div>
                  <div class="settings__order-track">
                    <a href="#"> Track Your Order </a>
                  </div>
                </div>
              </div>
            {% elsif block.type == 'logo-bar' %}
              <div class="d-none d-md-block col-md-4">
                <div class="search">
                  <form action="{{ routes.search_url }}">
                    <button type="submit">
                      {{ 'search-icon.svg' | inline_asset_content }}
                    </button>
                    <input
                      type="text"
                      placeholder="Enter your search keywords ..."
                      name="q"
                      value="{{ search.terms | escape }}"
                    >
                  </form>
                </div>
              </div>
              <div class="col-6 col-md-4">
                <div
                  class="logo logo--nav"
                  style="max-width: {{ block.settings.nav_width }}px;"
                >
                  <a href="/">
                    {% if block.settings.nav_logo != blank %}
                      <img
                        src="{{ block.settings.nav_logo | image_url: "master" }}"
                        alt="{{ site.name }}"
                        width="100%"
                        height="auto"
                      >
                    {% else %}
                      <img
                        src="{{ 'nav-logo@2x.png' | asset_url }}"
                        width="100%"
                        height="ato"
                        alt="{{ site.name }}"
                      >
                    {% endif %}
                  </a>
                </div>
              </div>
              <div class="col-6 d-md-none">
                <div class="hamburger" id="hamburger">
                  <span class="line"></span>
                  <span class="line"></span>
                  <span class="line"></span>
                </div>
              </div>
              <div class="d-none d-md-block col-md-4">
                <div class="icon-group">
                  <a href="#">
                    <div class="user">
                      <div class="user__icon">
                        {{ 'user-icon.svg' | inline_asset_content }}
                      </div>
                      <p class="user__text">Sign In</p>
                    </div>
                  </a>
                  <div class="vertical-line"></div>
                  <a href="#">
                    <div class="cart">
                      <div class="cart__icon">
                        {{ 'cart-icon.svg' | inline_asset_content }}
                      </div>
                    </div>
                  </a>
                </div>
              </div>
            {% elsif block.type == 'nav-bar' %}
              {% assign nav = block.settings.primary_nav %}
              <div class="col-12 col-md-9 col-lg-6">
                <menu-drawer>
                  <nav>
                    <ul class="submenu-depth-0 nav nav--{{ nav.handle }}">
                      {% for link in nav.links %}
                        <li class="outer-link {% if link.links.size > 0 %}has-submenu{% endif %}">
                          {% if link.links.size > 0 %}
                            <a class="nav-link" href="{{ link.url }}">
                              {{ link.title }}
                              <span class="nav-arrow">{{- 'nav-arrow-icon.svg' | inline_asset_content }}</span>
                            </a>
                            <ul class="submenu submenu-depth-1">
                              {% for sub_link in link.links %}
                                <li class="inner-link {% if sub_link.links.size > 0 %}has-submenu{% endif %}">
                                  {% if sub_link.links.size > 0 %}
                                    <a class="nav-link" href="{{ sub_link.url }}">
                                      {{- sub_link.title }}
                                      <span class="nav-arrow">{{- 'nav-arrow-icon.svg' | inline_asset_content }}</span>
                                    </a>
                                    <ul class="submenu submenu-depth-2">
                                      {% for sub_sub_link in sub_link.links %}
                                        <li class="inner-link">
                                          <a class="nav-link" href="{{ sub_sub_link.url }}">
                                            {{- sub_sub_link.title -}}
                                          </a>
                                        </li>
                                      {% endfor %}
                                    </ul>
                                  {% else %}
                                    <a class="nav-link" href="{{ sub_link.url }}">{{ sub_link.title }}</a>
                                  {% endif %}
                                </li>
                              {% endfor %}
                            </ul>
                          {% else %}
                            <a class="nav-link" href="{{ link.url }}">{{ link.title }}</a>
                          {% endif %}
                        </li>
                      {% endfor %}
                    </ul>
                  </nav>
                </menu-drawer>
              </div>
              <div class="d-none d-md-block col-md-3 col-lg-6">
                <div class="nav-phone">
                  <a href="tel:+11234567891">
                    <span class="nav-pone__icon">{{- 'nav-phone-icon.svg' | inline_asset_content }}</span>
                    <span class="nav-phone__text">Customer Care: +1 (123) 456-7891</span>
                  </a>
                </div>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
      {% if block.type == 'address-bar' %}
        <div class="horizontal-line"></div>
      {% endif %}
    {% endfor %}
  </top-header>
</section>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 40
    },
    {
      "type": "radio",
      "id": "sticky_nav",
      "label": "Enable Sticky Nav",
      "info": "The nav will follow the user down the page when scrolling",
      "options": [
        {
          "value": "sticky",
          "label": "On"
        },
        {
          "value": "sticky--off",
          "label": "Off"
        }
      ],
      "default": "sticky"
    }
  ],
  "blocks": [
    {
      "type": "address-bar",
      "name": "Address Bar",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "label": "Store Address",
          "id": "location_text",
          "default": "123 Main Street Chicago, IL 12345 United States"
        }
      ]
    },
    {
      "type": "logo-bar",
      "name": "Logo Bar",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "nav_logo",
          "label": "Nav Logo",
          "info": "Recommended image size: 153x94px"
        },
        {
          "type": "range",
          "id": "nav_width",
          "min": 110,
          "max": 180,
          "step": 2,
          "unit": "px",
          "label": "Logo Width",
          "default": 150
        }
      ]
    },
    {
      "type": "nav-bar",
      "name": "Nav Bar",
      "limit": 1,
      "settings": [
        {
          "type": "link_list",
          "id": "primary_nav",
          "label": "Primary Navigation"
        }
      ]
    }
  ]
}
{% endschema %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section
  class="blog-card-section section-{{ section.id }} section-{{ section.id }}-padding"
  id="{{section.id}}"
>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="blog-card-section__title-wrapper">
          {% if section.settings.title %}
            <h2>{{ section.settings.title }}</h2>
          {% endif %}
          {% render 'arrow-button',
            arrow_button_varient_class: 'primary',
            arrow_button_link: section.settings.button_link,
            arrow_button_text: section.settings.button_text
          %}
        </div>
      </div>
    </div>
    <div class="row">
      {% for block in section.blocks %}
        <div class="col-12 col-md-4">
          <div class="blog-block">
            <div class="img">
              <div class="date">
                <span class="day">2</span>
                <span class="month">Feb</span>
              </div>
              <a href="#">
                <img
                  src="{{ block.settings.img | img_url: 'master' }}"
                  alt="blog thumbnail"
                  width="auto"
                  height="auto"
                >
              </a>
            </div>
            <h3>
              <a href="#">
                {{ block.settings.title }}
              </a>
            </h3>
            <p>
              <a href="#">
                {{ block.settings.text }}
              </a>
            </p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Blog Cards Section",
  "settings": [
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 40
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Latest Updates"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Link",
      "default": "See All Articles"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Link"
    }
  ],
  "blocks": [
    {
      "type": "blog_block",
      "name": "Blog Block",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "The LeBron X Nike Plus basketball shoes will retail for approximately $270"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Michael Davis"
        },
        {
          "type": "image_picker",
          "id": "img",
          "label": "blog thumbnail",
          "info": "Recommended image size: 494x394px"
        }
      ]
    }
  ]
}
{% endschema %}
